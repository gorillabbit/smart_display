{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "business-app on chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/packages/business-app/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "consumer-app on chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9090",
      "webRoot": "${workspaceFolder}/packages/consumer-app/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ]
}
