{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "DOM"],
    "moduleResolution": "Node16",
    "module": "Node16",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "allowImportingTsExtensions": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
